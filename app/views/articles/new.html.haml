.container
  %input{:type => "text", class: "hoge", id: 'title'}/
  -# %input{:type => "text", class: "hoge", id: 'editor'}/
  %textarea{:name => "asd", :cols => "30", :rows => "10", class: 'hoge', id: 'editor'}

= form_for @article do |f|
  = f.text_area :title ,id: 'title-result'
  = f.collection_select :category_id, Category.all, :id, :name, prompt: "カテゴリー選択"
  = f.text_area :content ,id: 'result'
  = f.submit
